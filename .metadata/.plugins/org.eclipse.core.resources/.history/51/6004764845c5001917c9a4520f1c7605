package com.biz.var;

public class intVar_03 {
	public static void main(String[] args) {
		
		int num1=0;
		num1=30+40;
		System.out.println(num1);
		
		num1=30%2; // Modula 연산. x%y는 x/y의 나머지를 찾는 연산이다
		System.out.println(num1);
		
		num1=57;
		System.out.println("57/3의 몫 = ");
		System.out.println(57/3);
		
		System.out.println("57/3의 나머지 = ");
		System.out.println(57%3);
		
	}
}
